<div class="row-sort-assets" style="display: none">
	<div class="row-fluid">
		<div class="span8">
			{{#if categories}}
			<div id="breadcrumb">
				<div class="breadcrumb-l1">
					<div class="breadcrumb-head">
						{{#if selectedCategory}}
						<span>{{selectedCategory}}</span>
						{{else}}
						<span>All Categories</span>
						{{/if}}
						<i class="icon-caret-down"></i>
					</div>

					<ul class="breadcrumb-body">
						<li>
							<a href="{{url "/assets"}}/{{type}}">All Categories</a>
						</li>
						{{#each categories}}
						<li>
							<a href='{{url "/assets"}}/{{../../type}}?query=category:"{{this}}"'
                               {{#compare ../selectedCategory this operator="=="}}
                               class="os-active"
                               {{/compare}}
                              > {{this}}</a>
						</li>
						{{/each}}
					</ul>


				</div>

                <div class="breadcrumb-l1" style="margin-left: 20px">
                    <div class="breadcrumb-head">
						{{#if selectedPlatform}}
                            <span>{{selectedPlatform}}</span>
						{{else}}
                            <span>All Platforms</span>
						{{/if}}
                        <i class="icon-caret-down"></i>
                    </div>

                    <ul class="breadcrumb-body">
                        <li>
                            <a href="{{url "/assets"}}/{{type}}">All Platofrms</a>
                        </li>

                            <li>
                                <a href='{{url "/assets"}}/{{../type}}?query=platform:"android"'
									{{#compare selectedPlatform this operator="=="}}
                                   class="os-active"
									{{/compare}}
                                        >android</a>
                                <a href='{{url "/assets"}}/{{../type}}?query=platform:"ios"'
									{{#compare selectedPlatform this operator="=="}}
                                   class="os-active"
									{{/compare}}
                                        >ios</a>
                                <a href='{{url "/assets"}}/{{../type}}?query=platform:"webapp"'
									{{#compare selectedPlatform this operator="=="}}
                                   class="os-active"
									{{/compare}}
                                        >webapp</a>
                            </li>

                    </ul>


                </div>


				<!--
				<div class="breadcrumb-l2">
				<div class="breadcrumb-head">
				<span>Sub Category Name</span><i class="icon-caret-down"></i>
				</div>
				<ul class="breadcrumb-body">
				<li>
				<a href="#">Category 1</a>
