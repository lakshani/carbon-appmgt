<div>

    <div id="assets-container" data-pages="{{pages}}">

		{{#if assets}}

			{{#slice assets size="4"}}
                <div class="row-fluid">
					{{#each .}}
                        <div class="span3 type-{{attributes.overview_platform}} asset" data-id="{{id}}" data-type="{{type}}">
							{{#attributes}}
                                <a href="{{url "/assets"}}/{{../type}}/{{../id}}{{#if ../../../device}}?device={{../../../../device}}{{/if}}">
                                    <div class="asset-icon">
										{{#if ../../../config.enabled}}
											{{#if ../../indashboard}}
                                                <i class="icon-mobile-phone store-mobileapp-icon"></i>
											{{/if}}
										{{/if}}
                                        <img src="{{#if images_thumbnail}}{{images_thumbnail}}{{/if}}">
                                    </div>
                                </a>

                                <div class="asset-details">
                                    <div class="pull-right">
                                        <img src="{{url "/extensions/assets/mobileapp/themes/store/img/"}}{{overview_platform}}.png" style="width: 30px;"/>
                                    </div>
                                    <div class="asset-name">
                                        <a href="{{url "/assets"}}/{{../type}}/{{../id}}{{#if ../../../device}}?device={{../../../../device}}{{/if}}">
                                            <h4>{{overview_displayName}}</h4>
                                        </a>
                                    </div>
                                    <div class="asset-rating">
                                        <div class="asset-rating-{{../rating/average}}star"></div>
                                    </div>
                                    <div class="asset-author-category">
                                        <ul>
                                            <li>
                                                <h4>{{t "Category"}}</h4>
                                                <a class="asset-category" href="#">{{cap ../type}}</a>
                                            </li>
                                            <li>
                                                <h4>{{t "Author"}}</h4>
                                                <a class="asset-author" href="#">{{overview_provider}}</a>
                                            </li>
                                        </ul>
										{{#mergeContext ssoParam=../../../sso userParam=../../../user thisAsset=../this}}
											{{>assets-utilization}}
										{{/mergeContext}}
                                    </div>
                                </div>
							{{/attributes}}
                        </div>
					{{/each}}
                </div>
			{{/slice}}

		{{else}}
            <div class="empty-assert">{{t "We couldn't find anything for you."}}</div>
		{{/if}}

    </div>

    <div id="paging-indices">
        <ul class="pagination">
			{{#if leftNav}}
                <li>
                    <a href="{{url "/assets/mobileapp?page="}}{{this.leftNav}}">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only"></span>
                    </a>
                </li>
			{{/if}}
			{{#each pageIndeces}}
				{{#if this.isDisabled}}
                    <li class="disabled">
                        <a>{{this.index}}</a>
                    </li>
				{{else}}
                    <li>
                        <a href="{{url "/assets/mobileapp?page="}}{{this.index}}">{{this.index}}</a>
                    </li>
				{{/if}}
			{{/each}}
			{{#if rightNav}}
                <li>
                    <a href="{{url "/assets/mobileapp?page="}}{{this.rightNav}}">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only"></span>
                    </a>
                </li>
			{{/if}}
        </ul>
    </div>

</div>

<!-- Modal Features -->
{{#if user.username}}
    <div id="devicesList" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" style="width:700px" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"
					onclick="javacript:window.location.href = '/store/assets/mobileapp';">
                x
            </button>
            <h4 id="myModalLabel">Select your device to install</h4>
        </div>
        <div class="modal-body">
			{{#devices}}
                <div data-dismiss="modal"  class="span1 text-center device-image-block-modal" style="text-align: center; cursor: pointer"
					 data-device-id="{{id}}" data-platform="{{platform}}">
                    <img class="device-image-modal" style="height: 100px" data-device-id="{{id}}" data-platform="{{platform}}"
                         src="/store/extensions/assets/mobileapp/resources/models/{{model}}.png"/>
                    <div class="text-center" style="font-size: x-small">{{name}}</div>
                </div>
			{{/devices}}
        </div>
    </div>
{{/if}}
